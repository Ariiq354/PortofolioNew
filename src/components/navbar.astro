---
import Button from "./starwind/button";

const currentPath = Astro.url.pathname;

const pathname = [
  {
    name: "home",
    path: "/",
  },
  {
    name: "resume",
    path: "/resume",
  },
  {
    name: "work",
    path: "/work",
  },
  {
    name: "contact",
    path: "/contact",
  },
];
---

<header class="py-8 xl:py-12">
  <div class="container mx-auto flex items-center justify-between">
    <a href="/">
      <h1 class="text-4xl font-semibold">
        Ariiq<span class="text-primary">.</span>
      </h1>
    </a>

    <!-- Desktop -->
    <div class="hidden items-center gap-8 xl:flex">
      <nav class="flex gap-8">
        {
          pathname.map((item) => (
            <a
              href={item.path}
              class={
                currentPath === item.path
                  ? "font-medium capitalize transition-all hover:text-primary border-b-2 border-primary text-primary"
                  : "font-medium capitalize transition-all hover:text-primary"
              }
            >
              {item.name}
            </a>
          ))
        }
      </nav>
      <a href="/contact">
        <Button
          variant="primary"
          class="rounded-full px-4 py-2 text-sm text-black h-10"
        >
          Hire me
        </Button>
      </a>
    </div>

